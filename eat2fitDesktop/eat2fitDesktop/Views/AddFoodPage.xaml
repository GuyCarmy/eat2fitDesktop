<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eat2fitDesktop.Views.AddFoodPage">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="30">
            <StackLayout Orientation="Horizontal">
                <Label Text="Food Name"/>
                <Entry Text="{Binding Name}" WidthRequest="500"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Calories"/>
                <Entry Text="{Binding Calories}" WidthRequest="500"/>
            </StackLayout>

            <Button Text="Add" Command="{Binding OnAddFoodClickedCommand}" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>